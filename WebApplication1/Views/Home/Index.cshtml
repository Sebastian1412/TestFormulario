@{
    Layout = null;
}

<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Bootstrap demo</title>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <!-- DataTables CSS -->
    <link rel="stylesheet" href="https://cdn.datatables.net/1.10.22/css/dataTables.bootstrap4.min.css">
    <!-- jQuery -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <!-- DataTables JS -->
    <script src="https://cdn.datatables.net/1.10.22/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.10.22/js/dataTables.bootstrap4.min.js"></script>
    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/popperjs/core@2.11.6/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</head>
<body>

    @Html.Partial("~/Views/Shared/NavBar.cshtml")

    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="#">Home</a></li>
            <li class="breadcrumb-item"><a href="#">Scoring</a></li>
            <li class="breadcrumb-item"><a href="#">Tercero Asociado</a></li>
            <li class="breadcrumb-item active" aria-current="page">Consulta Tercero Asociado</li>
        </ol>
    </nav>

    <center><h2 class="display-5 fw-bold text-body-emphasis">Busqueda</h2></center>

    <form action="/#" method="post" id="miFormulario">
        <div class="container text-center">
            <div class="row align-items-center">
                <div class="col">
                    <label for="inputState" class="form-label">Compañia</label>
                    <select id="inputState" class="form-select" required>
                        <option selected>Seleccione compañia</option>
                        <option value="">Todas</option>
                        <option value="765986257 ">ASPOR</option>
                        <option value="99147000K ">BCI</option>
                        <option value="968376403 ">CARDIF</option>
                        <option value="990370001 ">CHILENA</option>
                        <option value="966541806 ">CONSORCIO</option>
                        <option value="965349405 ">EX-HDI</option>
                        <option value="770969522 ">FID</option>
                        <option value="992310006 ">HDI</option>
                        <option value="990610002 ">LIBERTY</option>
                        <option value="965082107 ">MAPFRE</option>
                        <option value="966831200 ">PENTA</option>
                        <option value="767434928 ">REALE CHILE</option>
                        <option value="945100001 ">RENTA NACIONAL</option>
                        <option value="992880007 ">SOUTHBRIDGE</option>
                        <option value="990170002 ">SURA</option>
                        <option value="760612235 ">ZNT</option>
                    </select>
                </div>
                <div class="col">
                    <label for="fechaSiniestroDesde" class="form-label">Fecha Siniestro Desde</label>
                    <input type="date" class="form-control" placeholder="Selecciona una fecha" aria-label="Selecciona una fecha" required>
                </div>
                <div class="col">
                    <label for="fechaCargaDesde" class="form-label">Fecha Carga Desde</label>
                    <input type="date" class="form-control" placeholder="Selecciona una fecha" aria-label="Selecciona una fecha" required>
                </div>
            </div>

            <div class="row align-items-center">
                <div class="col">
                    <label for="inputState" class="form-label">Nombre del archivo</label>
                    <input type="text" class="form-control" placeholder="First name" aria-label="First name" required>
                </div>
                <div class="col">
                    <label for="fechaSiniestroHasta" class="form-label">Fecha Siniestro Hasta</label>
                    <input type="date" class="form-control" placeholder="Selecciona una fecha" aria-label="Selecciona una fecha" required>
                </div>
                <div class="col">
                    <label for="fechaCargaHasta" class="form-label">Fecha Carga Hasta</label>
                    <input type="date" class="form-control" placeholder="Selecciona una fecha" aria-label="Selecciona una fecha" required>
                </div>
            </div>

            <div class="col-12">
                <br />
                <button type="submit" class="btn btn-primary" onclick="activarDataTables()">Buscar</button>
                <button type="button" class="btn btn-secondary" onclick="limpiarFormulario()">Limpiar formulario</button>
            </div>

        </div>
    </form>
    <script>
        function limpiarFormulario() {
            document.getElementById("miFormulario").reset();
        }
    </script>

    <div class="container mt-4">
        <table id="miTabla" class="table table-sm table-bordered table-striped" style="display:none;">
            <thead>
                <tr>
                    <th scope="col">Or. Aseg.</th>
                    <th scope="col">Or. Núm. Sin.</th>
                    <th scope="col">Or. Fec. Sin.</th>
                    <th scope="col">Or. Rut Tercero</th>
                    <th scope="col">Or. Patente Tercero</th>
                    <th scope="col">Ter. Aseg.</th>
                    <th scope="col">Ter. Núm. Sin.</th>
                    <th scope="col">Ter. Patente</th>
                    <th scope="col">Ter. Fec. Sin.</th>
                    <th scope="col">Ter. Rut Aseg.</th>
                    <th scope="col">Ter. Rut Cond.</th>
                </tr>
            </thead>
            <tbody>
                <!-- Cuerpo de la tabla aquí -->
            </tbody>
        </table>
    </div>

    <script>
        $(document).ready(function () {
            $('#miTabla').DataTable();
        });
    </script>
</body>
</html>

